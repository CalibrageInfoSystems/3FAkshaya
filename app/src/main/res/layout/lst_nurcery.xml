<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0.4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/half_black"
            android:orientation="horizontal"
            card_view:cardBackgroundColor="@color/white_new"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:padding="10dp"

                    android:scaleType="centerInside"
                    android:src="@drawable/nurseries_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_name"
                        style="@style/Common_textView_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:text="Hindi"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_dark_gray"

                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@drawable/devider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/village"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark_gray"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/collectioncentervillage"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Hindi"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@drawable/devider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:textColor="@color/text_dark_gray"
                        android:weightSum="1">

                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/mandal"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark_gray"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/collectioncentermandal"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Sasikanth Nagar, "
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@drawable/devider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:textColor="@color/text_dark_gray"
                        android:weightSum="1">

                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/dist"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark_gray"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/collectioncenterdistrict"
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text=" 533005"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@drawable/devider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:gravity="right"

                        android:orientation="horizontal"
                        android:textColor="@color/text_dark_gray"
                        android:weightSum="1">

                        <TextView
                            style="@style/Common_textView"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:text="View in Map"

                            android:textColor="@color/text_dark_gray"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/map"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="@dimen/margin_5"
                            android:foregroundGravity="left"
                            android:src="@drawable/ic_map_list" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>