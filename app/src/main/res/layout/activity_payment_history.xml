<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.calibrage.akshaya.views.actvity.PaymentHistoryActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/backlinear"
        android:background="@color/colorOrange">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/arrow_l" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/home"
                android:textColor="#ff0000ff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/back"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="@string/payments"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backlinear"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/margin_15"
        android:background="@drawable/spinner_bg">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:orientation="horizontal"

            android:weightSum="2"

            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:clipChildren="false"
                android:hint="@string/from_date"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"

                >

                <EditText
                    android:id="@+id/from_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:focusable="false"
                    android:hint="@string/from_date"

                    />
            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="@dimen/margin_10"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txt_to_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:clipChildren="false"
                android:hint="@string/to_date"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    android:id="@+id/to_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/to_date" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn__sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_below="@+id/linear2"
            android:background="@drawable/layout_backgound"
            android:elevation="8dp"
            android:fontFamily="@font/oswald_vf"
            android:text="SUBMIT"
            android:textAlignment="center"
            android:textAllCaps="false"

            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:visibility="gone"
        android:textAlignment="center"
        android:text="@string/no_payments_found"
        android:layout_marginTop="@dimen/text_size_20"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/colorAccent"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="12dp"
        android:paddingRight="14dp"

        android:layout_below="@+id/linear1">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@color/colorPrimary"
            android:scrollbarSize="3dp"
            android:scrollbarStyle="outsideInset"
            android:paddingBottom="0dp">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:layout_below="@+id/relative2"
        android:background="@drawable/layout_backgound"
        android:layout_marginStart="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_5"
        android:visibility="gone"

        >
        <RelativeLayout
            android:id="@+id/lin_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_one"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >


            <TextView
                android:id="@+id/tvtext_item_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:text="@string/ffb_qty"
                android:textColor="@color/white"
                android:textSize="@dimen/album_title"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:textColor="@color/white"
                android:text=":"
                android:layout_toRightOf="@+id/tvtext_item_two"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ffb_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/dot2"
                android:text=""
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/album_title"
                android:textStyle="bold"
                android:hint="ffb_total"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lin_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_two"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"

            >


            <TextView
                android:id="@+id/tvtext_item_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:text="@string/totalBalance"
                android:textSize="@dimen/album_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dot6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/tvtext_item_ten"
                android:layout_marginStart="54dp"
                android:textColor="@color/white"
                android:text=":"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/dot6"
                android:text=""
                android:hint="SBIN0021008"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/album_title"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_six"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingBottom="8dp"
            >


            <TextView
                android:id="@+id/tvtext_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:text="@string/total_records"
                android:textSize="@dimen/album_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/tvtext_count"
                android:layout_marginStart="80dp"
                android:textColor="@color/white"
                android:text=":"
                android:textSize="@dimen/album_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/dot3"
                android:text=""
                android:hint="10"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/album_title"
                android:textStyle="bold"/>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>

