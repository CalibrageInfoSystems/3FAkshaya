<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/backlinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/ic_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/back"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="@string/crop"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/home"
                android:textColor="#ff0000ff" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_10"
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backlinear"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/plotIdLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/plot_code"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/plotIdLabel"
            android:hint="APAB0001000001"
            android:paddingLeft="@dimen/album_title_padding"

            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/palmAreaLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/plot"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/plot_size"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plot"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/palmAreaLabel"
            android:hint="25 h"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title"


            />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/palmAreaLabel"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/village"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/palmArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_plot"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/textView55"
            android:hint="abc"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/landmarkLabel"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/palmArea"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/landmark"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/landmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/palmArea"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/textView55"
            android:hint="abc"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title" />
    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:background="@drawable/collect_bg"
                android:id="@+id/top_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/selecte_label"
                android:layout_margin="@dimen/_8dp"

                android:elevation="2dp"

                >

                <RelativeLayout
                    android:id="@+id/lin_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_one"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/treesAppearanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"

                        android:text="@string/treesAppearance"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/treesAppearance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="1sp"
                        android:layout_toRightOf="@+id/dot2"
                        android:hint=""
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_two"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3sp"
                    android:elevation="2dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/plamsCountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="1dp"
                        android:text="@string/plamsCount"

                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/plamsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1sp"
                        android:layout_toRightOf="@+id/dot3"
                        android:hint=""
                        android:text=""

                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_three"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3sp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvtext_item_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:text="@string/Frequency_harvest"
                        android:textColor="@color/white"

                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dot4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text=":"
                        android:textColor="@color/white"

                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/unPaidCollectionsWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="1sp"
                        android:layout_toRightOf="@+id/dot4"
                        android:hint=""
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_four"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3sp"

                    android:orientation="horizontal">




                    <TextView
                        android:id="@+id/dot5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text="@string/Frequency"
                        android:textColor="@color/white"

                        android:textStyle="bold" />



                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_five"
                    android:layout_marginStart="6dp"

                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/text_static"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:text="@string/static_data"
                        android:textColor="@color/white"

                        android:textSize="14dp"
                        android:textStyle="bold" />



                </RelativeLayout>
            </RelativeLayout>






            <RelativeLayout
                android:id="@+id/pest_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"
                android:padding="2dp">


                <TextView
                    android:id="@+id/pest_text1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_vertical"

                    android:gravity="center"
                    android:text="@string/pest"
                    android:textColor="@color/white_new"
                    android:textSize="16dp"
                    android:visibility="gone" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_pest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagerHomeLay"

                android:layout_marginBottom="3dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/dease_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"
                android:padding="2dp">


                <TextView
                    android:id="@+id/dease_text1"
                    android:gravity="center"


                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/deases"
                    android:textColor="@color/white_new"
                    android:visibility="gone"
                    android:textSize="16dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_dease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagerHomeLay"

                android:layout_marginBottom="3dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/nut_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"
                android:padding="2dp">


                <TextView
                    android:id="@+id/nut_text1"
                    android:gravity="center"


                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nut_repo"
                    android:textColor="@color/white_new"
                    android:visibility="gone"
                    android:textSize="16dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_nut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagerHomeLay"

                android:layout_marginBottom="3dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/fert_rec_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"
                android:padding="2dp">


                <TextView
                    android:id="@+id/fert_rec_text1"
                    android:gravity="center"


                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/fert_rec"
                    android:textColor="@color/white_new"
                    android:textSize="16dp" /> />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_fert_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagerHomeLay"

                android:layout_marginBottom="3dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/irr_rec_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"
                android:padding="2dp">


                <TextView
                    android:id="@+id/irr_rec_text1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_vertical"

                    android:gravity="center"
                    android:text="@string/irrigation"
                    android:textColor="@color/white_new"
                    android:textSize="16dp" />
                />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_irrigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagerHomeLay"

                android:layout_marginBottom="3dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/InterCrop_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"

                android:padding="2dp">


                <TextView
                    android:id="@+id/InterCrop_text1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_gravity="center_vertical"

                    android:gravity="center"
                    android:text="@string/inter_crop"
                    android:textColor="@color/white_new"
                    android:textSize="16dp" />/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_InterCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/pagerHomeLay"
                android:layout_marginBottom="3dp"
              />


            <RelativeLayout
                android:id="@+id/fertlizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:visibility="gone"
                android:padding="2dp">


                <TextView
                    android:id="@+id/fertlizer1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"

                    android:gravity="center"
                    android:text="@string/fertilizer_crop"
                    android:textColor="@color/white_new"
                    android:textSize="16dp"
                  />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_fertilizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/text_size_20"
        android:text="@string/no_req_found"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_20"
        android:visibility="gone" />
</RelativeLayout>