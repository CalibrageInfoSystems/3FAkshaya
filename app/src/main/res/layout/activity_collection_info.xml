<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:onClick="dismiss"
    android:paddingBottom="@dimen/abc_dialog_padding_material"
    android:paddingLeft="@dimen/abc_dialog_padding_material"
    android:paddingRight="@dimen/abc_dialog_padding_material"
    android:paddingTop="@dimen/abc_dialog_padding_top_material">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:elevation="6dp"
        android:transitionName="abc">

        <RelativeLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="93.25dp"
            android:background="@color/colorOrange_head"
            android:minHeight="275dp">

                >

                <RelativeLayout
                    android:id="@+id/lin_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_one"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="6dp"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/plotIdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"

                        android:text="@string/driver_name"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="1sp"
                        android:layout_toRightOf="@+id/dot2"
                        android:hint=""
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_two"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3sp"
                    android:elevation="2dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvtext_item_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="1dp"
                        android:text="@string/vehicle_Number"

                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vehicle_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="1sp"
                        android:layout_toRightOf="@+id/dot3"
                        android:hint=""
                        android:text=""

                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_three"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3sp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvtext_item_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:text="@string/collectionCenter"
                        android:textColor="@color/white"

                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dot4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1sp"
                        android:text=":"
                        android:textColor="@color/white"

                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/collection_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="1sp"
                        android:layout_toRightOf="@+id/dot4"
                        android:hint=""
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                </RelativeLayout>







        </RelativeLayout>



        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="166.5dp"
            android:layout_height="166.5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@mipmap/ic_launcher_round"/>



    </RelativeLayout>


</FrameLayout>