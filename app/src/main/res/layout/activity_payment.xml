<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context="in.calibrage.akshaya.views.actvity.PaymentActivity">
    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"


        >

        <ProgressBar
            android:id="@+id/pbHeaderProgress"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:theme="@style/AppTheme.WhiteAccent">

        </ProgressBar>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/backlinear"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/arrow_l" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/home"
                android:textColor="#ff0000ff" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/back"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"

                android:text="@string/payments"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lin_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_margin="@dimen/_8dp"
        android:background="@drawable/collect_bg"
        android:layout_below="@+id/backlinear">

        <RelativeLayout
            android:id="@+id/lin_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp">
        <TextView
            android:id="@+id/tvtext_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/bank_details"
            android:textSize="@dimen/text_size" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_head"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:id="@+id/tvtext_item_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="20dp"
            android:text="@string/bank_holder"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:textColor="@color/white"
            android:text=":"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtext_item_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15sp"
            android:layout_toRightOf="@+id/dot2"
            android:hint="Kiran vinnakota"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_two"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:id="@+id/tvtext_item_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/album_title"
            android:layout_marginLeft="20dp"
            android:text="@string/account_no"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtext_item_five"
            android:layout_width="wrap_content"
