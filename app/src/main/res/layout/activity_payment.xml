            android:text=""
            android:textSize="@dimen/album_title"
            android:hint="31213254698"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_three"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:id="@+id/tvtext_item_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="20dp"
            android:text="@string/bank_name"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:textColor="@color/white"
            android:text=":"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtext_item_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/dot4"
            android:text=""
            android:hint="SBI"
            android:textColor="@color/white"
            android:layout_marginLeft="10sp"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_four"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">


        <TextView
            android:id="@+id/tvtext_item_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
