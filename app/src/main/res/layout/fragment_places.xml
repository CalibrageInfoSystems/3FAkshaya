<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/relative1"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <lib.kingja.switchbutton.SwitchMultiButton
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/sw_paymentMode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:elevation="@dimen/margin_10"
            app:selectedColor="#eb7b00"
            app:switchTabs="@array/switch_tabs"
            app:selectedTab="0"
            app:strokeRadius="5dp"
            app:strokeWidth="1dp"
            app:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_fert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:layout_marginBottom="80dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_collection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:layout_below="@+id/collection_text"
            android:layout_marginBottom="80dp"

            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_mill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mill_text"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"

            android:layout_marginBottom="80dp" />


    </LinearLayout>


</LinearLayout>