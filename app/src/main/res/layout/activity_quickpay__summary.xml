            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/backlinear"
                android:background="@color/transparent">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_left"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="@dimen/margin_20"
                        android:layout_marginEnd="@dimen/margin_20"
                        android:id="@+id/back"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/quickPay"
                        android:layout_alignLeft="@+id/back"

                        android:layout_marginStart="25dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20" />


                    <ImageView
                        android:id="@+id/home_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/home"
                        android:textColor="#ff0000ff"
                        android:layout_marginTop="3dp"
                        />

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/lin_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
            android:layout_marginVertical="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_8dp"
                android:background="@drawable/collect_bg"
                android:layout_below="@+id/backlinear">


                <TextView
                    android:id="@+id/tvtext_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:text="@string/payment_summary"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/white_new"

                    />
                <RelativeLayout
                    android:id="@+id/lin_zero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginTop="30dp">


                    <TextView
                        android:id="@+id/tvtext_item_zero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/quantity_mt"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/dot0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"
                        android:text=":"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_quntity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_toRightOf="@+id/dot0"
                        android:text="0"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"
                        android:hint=""/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_zero"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">


                    <TextView
                        android:id="@+id/tvtext_item_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/ffb_flot"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/dot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"
                        android:text=":"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_flat_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_toRightOf="@+id/dot1"
                        android:text="0"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"
                        android:hint=""/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/lin_on"
                    android:layout_marginTop="0dp">


                    <TextView
                        android:id="@+id/tvtext_item_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/amount_of_FFB"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/white"
                        android:text=":"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvtext_item_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_toRightOf="@+id/dot2"
                        android:text="0"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"
                        android:hint=""/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_two"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">


                    <TextView
                        android:id="@+id/tvtext_item_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/album_title"
                        android:layout_marginLeft="5dp"
                        android:text="@string/convenience_charge"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvtext_item_seven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/dot3"
                        android:text=""
                        android:textSize="@dimen/album_title"
                        android:hint="0"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textStyle="bold"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_pay"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">


                    <TextView
                        android:id="@+id/text_quick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/album_title"
                        android:layout_marginLeft="5dp"
                        android:text="@string/quick_pay"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/dotq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text=":"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_quickpay_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/dotq"
                        android:text=""
                        android:textSize="@dimen/album_title"
                        android:hint="0"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textStyle="bold"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lin_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_three"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp">


                    <TextView
                        android:id="@+id/tvtext_item_six"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/closingBal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/dot4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/white"
                        android:text=":"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvtext_item_nine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/dot4"
                        android:text=""
                        android:hint="0"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"/>

                </RelativeLayout>
                <View  android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg"
                    android:layout_margin="10dp"
                    android:id="@+id/view"
                    android:layout_below="@+id/lin_four"/>
                <RelativeLayout
                    android:id="@+id/lin_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/tvtext_item_eight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5sp"
                        android:text="@string/total_amt_pay"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dot5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:textColor="@color/white"
                        android:text=":"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvtext_item_fifteen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/dot5"
                        android:text="0"
                        android:hint=""
                        android:textColor="@color/white"
                        android:layout_marginLeft="10sp"
                        android:textSize="@dimen/album_title"
                        android:textStyle="bold"/>

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/lin_five"
                    android:id="@+id/sign"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView3"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="@string/digital_signature"
                        android:textSize="@dimen/album_title"
                        android:textColor="@color/white_new"
                        android:layout_marginStart="6dp"
                        android:drawablePadding="5dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/star"
                        />
                    <com.kyanogen.signatureview.SignatureView
                        xmlns:sign="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/signature_view"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_bg"
                        android:layout_margin="@dimen/margin_10"
                        sign:penSize="5dp"
                        sign:backgroundColor="#ffffff"
                        sign:penColor="#000000"
                        sign:enableSignature="true"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clear"
                        android:layout_gravity="end"
                        android:text="clear"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/save"
                        android:text="save"/>
                </LinearLayout>


                <LinearLayout
                android:id="@+id/linearLayou"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                    android:layout_below="@+id/sign"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/margin_15"
                >

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="@string/i_have_agree"
                    android:textColor="@color/white"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/terms"
                    android:layout_below="@+id/lin_eight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_conditions"
                    android:textSize="16dp"
                    android:textColor="@color/colorOrange2"
                    android:layout_marginStart="@dimen/margin_5"
                    />
            </LinearLayout>

                <Button
                    android:id="@+id/buttonConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayou"
                    android:layout_marginLeft="10dp"
                    style="@style/Common_Button"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_bg"

                    android:shadowColor="@android:color/transparent"
                    android:text="@string/confirm_req"


                    />

        </RelativeLayout>

</RelativeLayout>