<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".views.fragments.HomeFragment">


    <LinearLayout
       android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.19">

        <TextView
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald_regular"
            android:text="Views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="6dp"
                card_view:cardBackgroundColor="@color/white"
                android:elevation="8dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:id="@+id/collections_button"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:outlineAmbientShadowColor="@color/colorOrange"
                    android:layout_gravity="center"
                    android:src="@drawable/collections"
                    android:layout_width="50dp"
                    android:id="@+id/collection_img"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_regular"
                    android:layout_below="@+id/collection_img"
                    android:text="@string/collection"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:id="@+id/payments_button"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/payments"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="@string/payments"
                    android:textSize="15dp"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:id="@+id/recommendations_button"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/recommendations"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="@string/recommendations"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.19">

        <TextView
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald_regular"
            android:text="Views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    android:src="@drawable/labour" />
                <TextView
                    android:text="@string/labour"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/pole"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="@string/pole"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>  <android.support.v7.widget.CardView
            android:background="@color/red"
            android:elevation="8dp"
            card_view:cardCornerRadius="6dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.33333"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/fertilizer"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:text="@string/fertilizer"
                android:textSize="15dp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/oswald_regular"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.19">

        <TextView
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald_regular"
            android:text="Views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/quick_pay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Collections"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/visit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="@string/visit"
                    android:textSize="15dp"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@color/red"
                android:elevation="8dp"
                card_view:cardCornerRadius="6dp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.33333"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/loan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="@string/loan"
                    android:layout_gravity="bottom"
                    android:textSize="15dp"
                    android:fontFamily="@font/oswald_regular"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <TextView
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/oswald_regular"
            android:text="Views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/learning_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:horizontalSpacing="4dp"
            android:verticalSpacing="4dp"
            android:numColumns="3"
            />



    </LinearLayout>

</LinearLayout>