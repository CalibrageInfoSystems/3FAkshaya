<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".views.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/Common_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/view" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_View_lyt_height"
                    android:layout_marginBottom="3dp"
                    android:weightSum="1">

                    <android.support.v7.widget.CardView
                        android:id="@+id/collections_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.33333"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        card_view:cardCornerRadius="6dp"
                        card_view:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/collection_img"
                                style="@style/Common_image"
                                android:src="@drawable/ic_home_collection" />

                            <TextView
                                style="@style/Common_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/collection_img"
                                android:text="@string/collection" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/payments_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.33333"
                        android:background="@color/red"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView

                                style="@style/Common_image"
                                android:src="@drawable/ic_coll" />

                            <TextView
                                style="@style/Common_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="@string/payments" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/recommendations_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.33333"
                        android:background="@color/red"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                style="@style/Common_image"
                                android:src="@drawable/ic_recom" />

                            <TextView
                                style="@style/Common_textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/recommendations" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/line_bg"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Common_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/req_services" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_View_lyt_height"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            android:id="@+id/labour_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.33333"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            card_view:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    style="@style/Common_image"
                                    android:src="@drawable/ic_labour" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/labour_lable" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/pole_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.33333"
                            android:background="@color/red"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            card_view:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    style="@style/Common_image"
                                    android:src="@drawable/ic_pole" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pole" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/fertilizer_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.33333"
                            android:background="@color/red"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            card_view:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    style="@style/Common_image"
                                    android:src="@drawable/ic_ferti" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fertilizer" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_View_lyt_height"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:weightSum="1">

                        <android.support.v7.widget.CardView
                            android:id="@+id/quickPay_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.33333"
                            android:background="@color/red"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            card_view:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView

                                    style="@style/Common_image"
                                    android:src="@drawable/ic_collection" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/quick" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/visit_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.33333"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            card_view:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    style="@style/Common_image"
                                    android:src="@drawable/ic_visits" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/visit" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/loan_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.33333"
                            android:background="@color/red"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            card_view:cardCornerRadius="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    style="@style/Common_image"
                                    android:src="@drawable/ic_bank" />

                                <TextView
                                    style="@style/Common_textView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loan" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/line_bg"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.25"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    style="@style/Common_textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/learning" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/learning_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:numColumns="4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/line_bg"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
               android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_regular"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget"
                    android:textColor="@color/blue" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_weight="0.7"
                    card_view:cardCornerRadius="@dimen/_8dp">
                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/bank_icon_white" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>