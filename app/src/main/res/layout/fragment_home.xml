<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".views.fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.17"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_regular"
            android:text="Views"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/collections_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="0.33333"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                card_view:cardBackgroundColor="@color/white_new"
                card_view:cardCornerRadius="6dp"
                card_view:cardElevation="6dp">

                <ImageView
                    android:padding="@dimen/margin_5"
                    android:id="@+id/collection_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"

                    android:outlineAmbientShadowColor="@color/colorOrange"
                    android:src="@drawable/ic_palm" />

                <TextView
                    android:textColor="@color/colorOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/collection_img"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/collection"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/payments_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="0.33333"
                android:background="@color/red"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                card_view:cardCornerRadius="6dp">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_coll" />

                <TextView
                    android:textColor="@color/colorOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/payments"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/recommendations_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="0.33333"
                android:background="@color/red"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical"
                card_view:cardCornerRadius="6dp">

                <ImageView
                    android:padding="@dimen/margin_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_recom" />

                <TextView
                    android:textColor="@color/colorOrange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/recommendations"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/line_bg"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Services"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:weightSum="1">

                <android.support.v7.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.33333"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="6dp">

                    <ImageView
                        android:padding="@dimen/margin_5"
                        android:layout_margin="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_labour" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textColor="@color/colorOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/labour"
                        android:textAlignment="center"
                        android:textSize="15dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.33333"
                    android:background="@color/red"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="6dp">

                    <ImageView
                        android:padding="@dimen/margin_5"
                        android:layout_margin="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_pole" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textColor="@color/colorOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/pole"
                        android:textAlignment="center"
                        android:textSize="15dp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.33333"
                    android:background="@color/red"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="6dp">

                    <ImageView
                        android:padding="@dimen/margin_5"
                        android:layout_margin="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_ferti" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textColor="@color/colorOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/fertilizer"
                        android:textAlignment="center"
                        android:textSize="15dp" />
                </android.support.v7.widget.CardView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.33333"
                    android:background="@color/red"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="6dp">

                    <ImageView

                        android:padding="@dimen/margin_5"
                        android:layout_margin="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_collection" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textColor="@color/colorOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/quickPay"
                        android:textAlignment="center"
                        android:textSize="15dp"  />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.33333"
                    android:background="@color/red"

                    
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="6dp">

                    <ImageView
                        android:padding="@dimen/margin_5"
                        android:layout_margin="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_visits" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textColor="@color/colorOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/visit"
                        android:textAlignment="center"
                        android:textSize="15dp"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0.33333"
                    android:background="@color/red"
                    android:elevation="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    card_view:cardCornerRadius="6dp">

                    <ImageView
                        android:padding="@dimen/margin_5"
                        android:layout_margin="6dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_bank" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:textColor="@color/colorOrange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/loan"
                        android:textAlignment="center"
                        android:textSize="15dp"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/line_bg"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_regular"
            android:text="Learnings"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
           android:layout_gravity="top"
            android:id="@+id/learning_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            />


    </LinearLayout>
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_weight="0.17"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorOrange"
            android:id="@+id/txt_banner"
            android:text="Single-line text view that scrolls automatically if the text is too long to fit in the widget"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
   <android.support.v7.widget.CardView
       android:layout_marginLeft="@dimen/margin_10"
       android:layout_marginRight="@dimen/margin_10"
       card_view:cardCornerRadius="@dimen/_8dp"
       android:layout_weight="0.7"
       android:layout_width="match_parent"
       android:layout_height="0dp">
       <ImageView
           android:scaleType="fitXY"
           android:id="@+id/img_banner"
           android:src="@drawable/bank_icon_white"
           android:layout_width="match_parent"
           android:layout_height="70dp"/>
   </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>