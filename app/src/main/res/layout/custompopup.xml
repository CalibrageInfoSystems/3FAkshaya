<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"

    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginEnd="30dp"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:text="@string/terms_conditions"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="44.5dp"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"

            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_two"
        android:orientation="horizontal"

        android:weightSum="1"

        >
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Common_textView"
            android:layout_weight=".2"
            android:text="@string/measurement"

            android:textSize="14dp" />

        <TextView
            android:id="@+id/prunning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Common_textView"
            android:layout_weight=".2"
            android:text="Pruning"

            android:textSize="14dp" />

        <TextView
            android:id="@+id/harv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Harvesting"
            android:layout_weight=".2"

            style="@style/Common_textView"
            />

        <TextView
            android:id="@+id/un1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnKnown1"
            android:layout_weight=".2"
            style="@style/Common_textView"
            />

        <TextView
            android:id="@+id/un2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UnKnown2"
            android:layout_weight=".2"
            style="@style/Common_textView"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear1">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/recycler_term"
            android:layout_marginBottom="5dp">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_term"

            style="@style/Common_textView"
            android:text="@string/service"
            />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/service_charge"
            android:text="@string/got_it"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:textSize="18dp"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:textColor="@color/white" />


    </RelativeLayout>


</LinearLayout>