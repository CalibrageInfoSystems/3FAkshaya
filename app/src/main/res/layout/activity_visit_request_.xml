<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/shape">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/backlinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="@dimen/margin_20"
                android:src="@drawable/ic_left" />

            <ImageView
                android:id="@+id/home_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/home"
                android:textColor="#ff0000ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/back"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:text="@string/req_visit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/relative1"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginLeft="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginRight="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:background="@drawable/collect_bg"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_label"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:drawableRight="@drawable/star"
                android:drawablePadding="5dp"
                android:paddingTop="5dp"
                android:text="@string/issue_type"
                android:textColor="@color/white_new"
                android:textSize="@dimen/album_title" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="8dp"

                android:background="@drawable/spinner_bg"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/_8dp"
                    android:src="@drawable/arrow_down" />

                <Spinner
                    android:id="@+id/issue_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:padding="@dimen/margin_10" />
            </RelativeLayout>
            <TextView
                android:id="@+id/textViewc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:drawableRight="@drawable/star"
                android:drawablePadding="5dp"
                android:paddingTop="5dp"
                android:text="@string/comments"
                android:textColor="@color/white_new"
                android:textSize="@dimen/album_title" />
            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/_8dp"
                android:background="@drawable/spinner_bg"

                android:hint="@string/comments"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white_new"
                android:textSize="@dimen/album_title" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:drawableRight="@drawable/star"
                android:drawablePadding="5dp"
                android:paddingTop="5dp"
                android:text="@string/image"
                android:textColor="@color/white_new"
                android:textSize="@dimen/album_title" />


        <LinearLayout
            android:id="@+id/images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight=".33"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight=".33"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_weight=".33"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone" />

            <ImageButton
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                android:id="@+id/btn_addIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="@color/transparent"
                android:textColor="@color/whitepure"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="130dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:drawableRight="@drawable/star"
            android:drawablePadding="5dp"
            android:paddingTop="5dp"
            android:text="@string/record"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title" />
        <LinearLayout
            android:id="@+id/voice_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >
            <ImageButton

                android:id="@+id/btn_addvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"

                android:src="@drawable/voice_add"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:weightSum="1">

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"

       style="@style/Common_Button"
                android:text="@string/record_btn"


                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stop"
                android:layout_marginLeft="20dp"
              android:background="@drawable/button_bg_disable"
                android:layout_weight=".5"
                android:id="@+id/button2"


                />
        </LinearLayout>


<!--            <Button-->
<!--                android:id="@+id/button4"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="-10dp"-->
<!--                android:layout_weight=".4"-->
<!--                android:text="STOP PLAYING "-->


<!--                />-->

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:visibility="gone"
            android:text="@string/play" />

        <Button
            android:id="@+id/req_loan"
            style="@style/Common_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_10"

            android:padding="@dimen/margin_15"
            android:text="@string/submit_req">

        </Button>
        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/amount_label"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <RelativeLayout-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:layout_margin="8dp"-->

            <!--                android:background="@drawable/spinner_bg"-->
            <!--                android:elevation="2dp">-->

            <!--                <ImageView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_alignParentRight="true"-->
            <!--                    android:layout_alignParentBottom="true"-->
            <!--                    android:padding="@dimen/_8dp"-->
            <!--                    android:src="@drawable/arrow_down" />-->

            <!--                <Spinner-->
            <!--                    android:id="@+id/issue_type"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:background="@null"-->
            <!--                    android:minHeight="0dp"-->
            <!--                    android:padding="@dimen/margin_10" />-->
            <!--            </RelativeLayout>-->



        </LinearLayout>




    </LinearLayout>



    />
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backlinear"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/plotIdLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/plot_code"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/plotIdLabel"
            android:hint="APAB0001000001"
            android:paddingLeft="@dimen/album_title_padding"

            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/palmAreaLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/plot"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/plot_size"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plot"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/palmAreaLabel"
            android:hint="25 h"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title"


            />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/palmAreaLabel"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/village"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/palmArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_plot"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/textView55"
            android:hint="abc"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title" />

        <TextView
            android:id="@+id/landmarkLabel"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/palmArea"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:text="@string/landmark"
            android:textColor="@color/white_new"
            android:textSize="@dimen/album_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/landmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/palmArea"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@+id/textView55"
            android:hint="abc"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:textColor="@color/white"
            android:textSize="@dimen/album_title" />


    </RelativeLayout>

</RelativeLayout>