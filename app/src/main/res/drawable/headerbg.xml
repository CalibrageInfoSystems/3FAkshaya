<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">


            <gradient
                android:angle="270"
                android:startColor="#C4C3C3"
                android:centerColor="#FBFCFB"
                android:endColor="#C4C3C3"
                android:type="linear" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>

</selector>