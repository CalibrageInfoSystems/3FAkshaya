<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="1000dp">
        <shape>
            <solid android:color="@color/very_light_gray" />
        </shape>
    </item>
    <item android:top="-100dp" android:bottom="500dp" android:left="-50dp" android:right="-50dp">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#FB8C00"
                android:centerColor="@color/colorOrange"
                android:startColor="#FF9800"
                />
            <corners android:radius="900dp" />
        </shape>
    </item>
</layer-list>